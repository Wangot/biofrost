<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">
            Trucks
        </h2>
    </div>
</div>
<div class="row">
    <div class="col-md-offset-3 col-lg-6">
        <form role="form">
            <div class="form-group">
                <label>Truck name</label>
                <input ng-model="Truck.name" class="form-control" placeholder="Enter text">
                <p class="help-block"></p>
            </div>
            <div class="form-group">
                <label>Plate number</label>
                <input ng-model="Truck.plate_number" class="form-control" placeholder="Enter text">
                <p class="help-block"></p>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea ng-model="Truck.description" class="form-control" rows="3"></textarea>
            </div>
            <div class="form-action">
                <button type="button" class="btn btn-lg btn-warning">Cancel</button>
                <button ng-click="save()" type="button" class="btn btn-lg btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>


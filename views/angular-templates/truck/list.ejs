<div class="row">
    <div class="col-lg-12 title-bar">
        <h3 class="title col-lg-6">
            Trucks
        </h3>
        <div class="col-lg-6 title-box">
            <a href="trucks/add" class="btn col-lg-offset-11 btn-primary">Add</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Name</th>
                        <th>Plate number</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="truck in Trucks">
                        <td>{{truck.id}}</td>
                        <td>{{truck.name}}</td>
                        <td>{{truck.plate_number}}</td>
                        <td>{{truck.description}}</td>
                        <td><a href="trucks/{{truck.id}}">Edit</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12 title-bar">
        <h3 class="title col-lg-6">
            Deliveries
        </h3>
        <div class="col-lg-6 title-box">
            <a href="deliveries/add" class="btn col-lg-offset-11 btn-primary">Add</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Description</th>
                        <th>Truck</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="delivery in Deliveries">
                        <td>{{delivery.id}}</td>
                        <td>{{delivery.description}}</td>
                        <td>{{delivery.Truck.name}}</td>
                        <td><a href="deliveries/{{delivery.id}}">Edit</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


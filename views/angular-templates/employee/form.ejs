<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">
            Employee
        </h2>
    </div>
</div>
<div class="row">
    <div class="col-md-offset-3 col-lg-6">
        <form role="form">
            <div class="form-group">
                <label>Company</label>
                <select class="form-control" ng-options="item as item.name for item in Merchants track by item.id" ng-model="Employee.Merchant"></select>
                <p class="help-block"></p>
            </div>
            <div class="form-group">
                <label>First name</label>
                <input ng-model="Employee.first_name" class="form-control" placeholder="Enter text">
                <p class="help-block"></p>
            </div>
            <div class="form-group">
                <label>Middle name</label>
                <input ng-model="Employee.middle_name" class="form-control" placeholder="Enter text">
                <p class="help-block"></p>
            </div>
            <div class="form-group">
                <label>Last name</label>
                <input ng-model="Employee.last_name" class="form-control" placeholder="Enter text">
                <p class="help-block"></p>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea ng-model="Employee.description" class="form-control" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input ng-model="Employee.email" class="form-control" placeholder="Enter text">
                <p class="help-block"></p>
            </div>
            <div class="form-group">
                <label>Telephone</label>
                <input ng-model="Employee.telephone" class="form-control" placeholder="Enter text">
                <p class="help-block"></p>
            </div>
            <div class="form-group">
                <label>Mobile</label>
                <input ng-model="Employee.mobile" class="form-control" placeholder="Enter text">
                <p class="help-block"></p>
            </div>
            <div class="form-group">
                <label>Address</label>
                <textarea ng-model="Employee.adrress" class="form-control" rows="3"></textarea>
            </div>
            <div class="form-group col-lg-8 no-padding">
                <label>City</label>
                <input ng-model="Employee.city" class="form-control" placeholder="Enter text">
                <p class="help-block"></p>
            </div>
            <div class="col-lg-1">
            </div>
            <div class="form-group col-lg-3 no-padding">
                <label>Zip code</label>
                <input ng-model="Employee.zip_code" class="form-control" placeholder="Enter text">
                <p class="help-block"></p>
            </div>
            <div class="form-action">
                <button type="button" class="btn btn-lg btn-warning">Cancel</button>
                <button ng-click="save()" type="button" class="btn btn-lg btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>


<div class="row">
    <div class="col-lg-12 title-bar">
        <h3 class="title col-lg-6">
            Client
        </h3>
        <div class="col-lg-6 title-box">
            <a href="invoices/add" class="btn col-lg-offset-11 btn-primary">Add</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>name</th>
                        <th>Total cost</th>
                        <th>Amount Paid</th>
                        <th>Balance</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="invoice in Invoices">
                        <td>{{invoice.id}}</td>
                        <td>{{invoice.name}}</td>
                        <td>{{invoice.total_cost}}</td>
                        <td>{{invoice.amount_paid}}</td>
                        <td>{{invoice.total_cost - invoice.amount_paid}}</td>
                        <td><a href="invoices/{{invoice.id}}">Edit</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12 title-bar">
        <h3 class="title col-lg-6">
            Client
        </h3>
        <div class="col-lg-6 title-box">
            <a href="clients/add" class="btn col-lg-offset-11 btn-primary">Add</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>name</th>
                        <th>email</th>
                        <th>telephone/mobile</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="client in Client">
                        <td>{{client.id}}</td>
                        <td>{{client.name}}</td>
                        <td>{{client.email}}</td>
                        <td>{{client.telephone}} / {{client.mobile}}</td>
                        <td><a href="clients/{{client.id}}">Edit</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

